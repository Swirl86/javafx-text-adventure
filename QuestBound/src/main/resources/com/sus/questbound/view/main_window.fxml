<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/21.0.6"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.sus.questbound.MainController"
      spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Output area -->
    <TextArea fx:id="outputArea" editable="false" prefHeight="300"/>

    <!-- Input field -->
    <HBox spacing="5">
        <TextField fx:id="inputField" HBox.hgrow="ALWAYS"/>
        <Button text="Enter" onAction="#handleInput"/>
    </HBox>

</VBox>
